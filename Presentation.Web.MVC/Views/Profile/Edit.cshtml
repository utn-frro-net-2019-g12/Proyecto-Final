@model Presentation.Web.MVC.Models.MvcUsuarioModel

@{
    ViewBag.Title = "Details";
}

    <div class="row justify-content-md-center">
        <div class="col-lg-11">
            <!-- Basic Card Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Mi Perfil</h6>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @Html.LabelFor(model => model.Firstname, new { @class = "mb-0 ml-1" })
                                @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control form-control-user" })
                                @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.Surname, new { @class = "mb-0 ml-1" })
                                @Html.TextBoxFor(model => model.Surname, new { @class = "form-control form-control-user" })
                                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @Html.LabelFor(model => model.Username, new { @class = "mb-0 ml-1" })
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control form-control-user", @readonly = "true" })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.Matricula, new { @class = "mb-0 ml-1" })
                                @Html.TextBoxFor(model => model.Matricula, new { @class = "form-control form-control-user", @readonly = "true" })
                                @Html.ValidationMessageFor(model => model.Matricula, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.Legajo, new { @class = "mb-0 ml-1" })
                                @Html.TextBoxFor(model => model.Legajo, new { @class = "form-control form-control-user", @readonly = "true" })
                                @Html.ValidationMessageFor(model => model.Legajo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.Email, new { @class = "mb-0 ml-1" })
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-user" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-3 mb-3 mb-sm-0">
                                @Html.LabelFor(model => model.Phone1, new { @class = "mb-0 ml-1" })
                                @Html.TextBoxFor(model => model.Phone1, new { @class = "form-control form-control-user" })
                                @Html.ValidationMessageFor(model => model.Phone1, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-3 mb-3 mb-sm-0">
                                @Html.LabelFor(model => model.Phone2, new { @class = "mb-0 ml-1" })
                                @Html.TextBoxFor(model => model.Phone2, new { @class = "form-control form-control-user" })
                                @Html.ValidationMessageFor(model => model.Phone2, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" id="searchButton">
                            Guardar
                        </button>
                    }
                </div>
            </div>
            <!-- Collapsable Card Example -->
            <div class="card shadow mb-4">
                <!-- Card Header - Accordion -->
                <a href="#editPasswordCollapse" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="editPasswordCollapse">
                    <h6 class="m-0 font-weight-bold text-primary">Editar Contraseña</h6>
                </a>
                <!-- Card Content - Collapse -->
                <div class="collapse show" id="editPasswordCollapse">
                    <div class="card-body">
                        <form>
                            <div class="form-group row">
                                <div class="col-sm-12 mb-3 mb-sm-0">
                                    <input type="password" class="form-control form-control-user" id="contraseña0" placeholder="Contraseña actual">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="password" class="form-control form-control-user" id="contraseña1" placeholder="Nueva Contraseña">
                                </div>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control form-control-user" id="contraseña2" placeholder="Repetir Nueva Contraseña">
                                </div>
                            </div>
                            <a href="#" class="btn btn-success">
                                Cambiar
                            </a>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Collapsable Card Example -->
            <div class="card shadow mb-4">
                <!-- Card Header - Accordion -->
                <a href="#settingsCollapse" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="settingsCollapse">
                    <h6 class="m-0 font-weight-bold text-primary">Opciones</h6>
                </a>
                <!-- Card Content - Collapse -->
                <div class="collapse show" id="settingsCollapse">
                    <div class="card-body">
                        --
                    </div>
                </div>
            </div>
        </div>
    </div>

