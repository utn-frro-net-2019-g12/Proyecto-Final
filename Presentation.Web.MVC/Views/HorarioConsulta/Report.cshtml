@{
    Layout = null;
}

@model IEnumerable<Presentation.Web.MVC.Models.MvcHorarioConsultaModel>

@{
    ViewBag.Title = "Report";
}

<!DOCTYPE html>
<html lang="es" dir="ltr">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>@ViewBag.Title - Consultas</title>

        @Styles.Render("~/Content/fontawesome")
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        @Styles.Render("~/Content/sb-2")
    </head>

    <body>
        <div class="row">
            <div class="col">
                <h2>Horarios de Consulta</h2>
            </div>
            <div class="col ml-auto">
                <h5>@DateTime.Now</h5>
            </div>
        </div>
        <table class="table">
            <tr>
                <th>
                    Materia
                </th>
                <th>
                    Profesor
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weekday)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartHour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndHour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Place)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Materia.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profesor.Surname),
                        @Html.DisplayFor(modelItem => item.Profesor.Firstname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weekday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Place)
                    </td>
                </tr>
            }

        </table>
    </body>
</html>
