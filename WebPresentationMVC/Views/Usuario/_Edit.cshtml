@model WebPresentationMVC.Models.MvcUsuarioModel

@{
    ViewBag.Title = "_Edit";
}

<!--
    Partial View for "Modify" Model on Index
-->

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editForm" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Editar a @Html.DisplayFor(model => model.Firstname) @Html.DisplayFor(model => model.Surname)</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
        </div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                @*@Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label" })*@
                @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @placeholder = "Nombre", @class = "form-control form-control-user" } })
                @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger m-0" })
            </div>
            <div class="col-sm-6">
                @*@Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label" })*@
