                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger m-0" })
            </div>
            <div class="col-sm-7">
                @* @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })*@
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "Email", @class = "form-control form-control-user" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger m-0" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                @*@Html.LabelFor(model => model.Legajo, htmlAttributes: new { @class = "control-label" })*@
