@model WebPresentationMVC.ViewModels.EditMateriaViewModel

@{
    ViewBag.Title = "_Edit";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editForm" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title">Editar Materia</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Materia.Id)
        </div>
        <div class="form-group row">
            <div class="col-sm-8 mb-3 mb-sm-0">
                @Html.EditorFor(model => model.Materia.Name, new { htmlAttributes = new { @placeholder = "Nombre", @class = "form-control  form-control-user" } })
                @Html.ValidationMessageFor(model => model.Materia.Name, "", new { @class = "text-danger m-0" })
            </div>
            <div class="col-sm-4">
                @Html.EditorFor(model => model.Materia.Year, new { htmlAttributes = new { @placeholder = "Año", @class = "form-control form-control-user" } })
                @Html.ValidationMessageFor(model => model.Materia.Year, "", new { @class = "text-danger m-0" })
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-md-4 mb-3  my-auto">
                <div class=" row justify-content-center align-items-center mx-auto">
                    @Html.CheckBoxFor(model => model.Materia.IsElectiva, htmlAttributes: new { @class = "m-1" })
                    @Html.LabelFor(model => model.Materia.IsElectiva, htmlAttributes: new { @class = "control-label mb-0" })
                    @Html.ValidationMessageFor(model => model.Materia.IsElectiva, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-8">
                @Html.DropDownListFor(
                    model => model.Materia.DepartamentoId,
                    Model.DepartamentosList,
                    "Departamento",
                    new { @class = "form-control" }
                    )
                @Html.ValidationMessageFor(model => model.Materia.DepartamentoId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-success">Guardar</button>
    </div>
}

